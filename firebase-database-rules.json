{
  "rules": {
    "usuarios": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "posiciones": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "zonas": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "mensajes": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$conversacionId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
